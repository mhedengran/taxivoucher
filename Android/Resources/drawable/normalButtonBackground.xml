<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
 <item android:state_pressed="true" >
     <shape android:shape="rectangle"  >
         <corners android:radius="15dip" />
         <gradient android:angle="-90" android:startColor="@color/menuButtonColor" android:endColor="@color/normalButtonColor"  />            
     </shape>
 </item>
<item android:state_focused="true">
     <shape android:shape="rectangle"  >
         <corners android:radius="15dip" />
         <gradient android:angle="-90" android:startColor="@color/normalButtonColor" android:endColor="@color/menuButtonColor" />
     </shape>
 </item>  
<item >
    <shape android:shape="rectangle"  >
         <corners android:radius="15dip" />
         <solid android:color="@color/normalButtonColor"/>                  
     </shape>
 </item>
</selector>
